@model WebAppMerck.Models.FormularioData
@{
    ViewData["Title"] = "Indicador";
}

<div class="col-12 text-center vh-50" style="background-color: 	#FFB6C1; padding: 150px;">
    <div class="text-center text-white">
        <h2>Merck <small style="font-size: 50%;">FERTILIDAD</small></h2>
    </div>
    <div>
        <p class="h4 text-white">EDAD ACTUAL: @TempData["EdadActual"] AÑOS</p>
        <p class="h4 text-white">1ERA MENSTRUACIÓN: A LOS @TempData["EdadPrimeraMenstruacion"] AÑOS</p>
    </div>
</div>

<div class="col-12 text-center">
    <h3 style="color: #FFB6C1;">RESERVA OVARICA</h3>

    <div class="d-flex justify-content-center align-items-center mt-3">
        @{
            var nivelFertilidad = TempData["NivelFertilidad"]?.ToString();
            var colorBaja = "#FFB6C1";
            var colorMedia = "#FFB6C1";
            var colorAlta = "#FFB6C1";
        }

        <div class="text-center">
            <i class="fas fa-leaf fa-3x mx-2" style="color: @(nivelFertilidad == "Baja" ? colorBaja : "black");"></i>
            <p>Baja</p>
        </div>
        <div class="text-center">
            <i class="fas fa-leaf fa-3x mx-2" style="color: @(nivelFertilidad == "Media" ? colorMedia : "black");"></i>
            <p>Media</p>
        </div>
        <div class="text-center">
            <i class="fas fa-leaf fa-3x mx-2" style="color: @(nivelFertilidad == "Alta" ? colorAlta : "black");"></i>
            <p>Alta</p>
        </div>
    </div>
</div>

<script src="~/js/map.js"></script>

<div id="mapContainer" style="width: 100%; height: 400px;">Mapa</div>

<script>
    initMap();
</script>
