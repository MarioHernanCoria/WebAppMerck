@model WebAppMerck.Models.Formulario

@{
    ViewData["Title"] = "Indicador";
}
<header style="background-color:#EC3B96">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3>
        <div class="container-fluid>
            <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>


<div class="col-12 text-center vh-50" style="background-color:#EC3B96; padding: 150px;">
    <div class="text-center text-white">
        <img class="justify-content-center" style="display:block; margin-left:auto; margin-right:auto" src="~/imagenes/LogoMerckRosa.jpg" />
    </div>
    <div>
        <p class="h4 text-white">EDAD ACTUAL: @TempData["EdadActual"] AÑOS</p>
        <p class="h4 text-white">1ERA MENSTRUACIÓN: A LOS @TempData["EdadPrimeraMenstruacion"] AÑOS</p>
    </div>
</div>

<div class="col-12 mt-4 text-center">
    <h3 style="color: #EC3B96;">Curva de Fertilidad</h3>
    <div id="curve_chart" style="height: 300px;"></div>
</div>

<div id="curve_chart" style="width: 400px; height: 50px;"></div>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);

    function drawChart() {
        var edad = parseInt('@ViewData["EdadActual"]');
        var nivelFertilidad = '@ViewData["NivelFertilidad"]';

        var datos = [
            ['Year', 'Nivel de Fertilidad'],
            ['Actual', nivelFertilidad === 'Baja' ? 1 : nivelFertilidad === 'Media' ? 2 : 3]
        ]; 

        var data = google.visualization.arrayToDataTable(datos);

        var options = {
            title: 'Nivel de Fertilidad a lo largo del tiempo',
            curveType: 'function',
            legend: { position: 'bottom' }
        };

        var chart = new google.visualization.LineChart(document.getElementById('curve_chart'));

        chart.draw(data, options);
    }
</script>


<div class="row mt-3">
    <div class="col-md-6 offset-md-3 text-center">
        <a asp-controller="Home" asp-action="Consulta" class="btn btn-primary">Más Información</a>
    </div>
</div>



