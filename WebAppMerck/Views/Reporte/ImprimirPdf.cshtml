@model List<WebAppMerck.Modelos.Models.ViewModel.ConsultaViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reportas</title>
    <link rel="stylesheet" href="~/css/Pdf.css" asp-append-version="true" />
    
</head>
<body>
    <div style="margin-left: 900px; width: 300px; height: 100px;">
        <img src="~/imagenes/LogoMerck.jpg" class="img-fluid" alt="Logo Merck">
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1 class="text-center">Reporte Consultas</h1>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Motivo de Consulta</th>
                            <th>Clinica</th>
                            <th>Fecha y Hora</th>
                            <th>URL</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var consulta in Model)
                        {
                            <tr>
                                <td>@consulta.MotivoConsulta</td>
                                <td>@consulta.Clinica</td>
                                <td>@consulta.FechaYhora</td>
                                <td>@consulta.Url</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
 
</body>
</html>
