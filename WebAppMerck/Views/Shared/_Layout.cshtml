<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebAppMerck</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAppMerck.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/87b5288e78.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type='text/javascript' src='https://www.bing.com/api/maps/mapcontrol?key=@ViewData["BingMapsApiKey"]'></script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=@ViewData["TrackingId"]"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', '@ViewData["TrackingId"]');
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</head>
<body>
    <div class="container-fluid m-0 p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>
</body>
</html>
